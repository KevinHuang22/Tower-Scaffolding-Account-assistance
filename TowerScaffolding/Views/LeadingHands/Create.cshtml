@model TowerScaffolding.Models.LeadingHand

@{
    ViewData["Title"] = "Create";
}

<h2>Create</h2>

<h4>LeadingHand</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="ID" class="control-label" name="Code"></label>
                <input asp-for="ID" class="form-control" value=""/>
                <span asp-validation-for="ID" class="text-danger"></span>
                <p><font color="red">The leading hand's code must be unique and never changed</font></p>
            </div>
            <div class="form-group">
                <label asp-for="FirstName" class="control-label"></label>
                <input asp-for="FirstName" class="form-control" />
                <span asp-validation-for="FirstName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="LastName" class="control-label"></label>
                <input asp-for="LastName" class="form-control" />
                <span asp-validation-for="LastName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ScaffoldTicket" class="control-label"></label>
                <input asp-for="ScaffoldTicket" class="form-control" />
                <span asp-validation-for="ScaffoldTicket" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DriversLicence" class="control-label"></label>
                <input asp-for="DriversLicence" class="form-control" />
                <span asp-validation-for="DriversLicence" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
